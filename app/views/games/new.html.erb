<h1>New Game</h1>
<p><%= @letters  %></p>

<form action="/games/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :random_array, @letters %>

  <p>What is the longest word you can form?</p>
  <input type="text" name="word" placeholder="Type here..">
  <input type="submit" value="Play">
</form>
